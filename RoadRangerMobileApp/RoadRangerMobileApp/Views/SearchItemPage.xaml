<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Car Details"
             x:Class="RoadRangerMobileApp.Views.SearchItemPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Report" 
                     Icon="report.png"
                     Clicked="ReportItem_Clicked">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="10">
            <Image Source=""
                   WidthRequest="100"
                   HeightRequest="100"/>
            <Label Text="{Binding Item.LicensePlate, StringFormat='License plate: {0}'}"/>
            <Label Text="{Binding Item.Status, StringFormat='Status: {0}'}" 
                   FontSize="Small"/>
            <Label Text="{Binding Item.Image.Date, StringFormat='Date: {0}'}" 
                   FontSize="Small"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>