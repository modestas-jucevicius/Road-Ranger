<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoadRangerMobileApp.Views.MyHomePage">
    <ContentPage.Content>
        <StackLayout>

            <Grid RowSpacing="5" ColumnSpacing="5" BackgroundColor="Black">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Button Text="My Galley" 
                    Grid.Row="0" 
                    Grid.Column="0" 
                    HorizontalOptions="FillAndExpand" 
                    VerticalOptions="FillAndExpand"
                    WidthRequest="100"
                    HeightRequest="100"
                    Clicked="MyGalleryButton_Clicked"/>

                <Button Text="My Stolen Cars" 
                    Grid.Row="0"
                    Grid.Column="1" 
                    HorizontalOptions="FillAndExpand" 
                    VerticalOptions="FillAndExpand"
                    Clicked="MyStolenCarsButton_Clicked"/>

            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>